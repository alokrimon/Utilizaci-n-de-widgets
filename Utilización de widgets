import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Widgets Básicos LDSW',
      home: Scaffold(
        appBar: AppBar(
          title: const Text('Widgets Básicos en Flutter'),
          backgroundColor: Colors.deepPurple,
        ),
        body: const WidgetsDemo(),
      ),
    );
  }
}

class WidgetsDemo extends StatelessWidget {
  const WidgetsDemo({super.key});

  @override
  Widget build(BuildContext context) {
    return SingleChildScrollView(
      child: Padding(
        padding: const EdgeInsets.all(16.0),
        child: Column(
          children: [
            // ---------- TEXT ----------
            const Text(
              'Ejemplo de widget Text',
              style: TextStyle(
                fontSize: 24,
                fontWeight: FontWeight.bold,
                color: Colors.deepPurple,
              ),
            ),
            const SizedBox(height: 20),

            // ---------- ROW ----------
            const Row(
              mainAxisAlignment: MainAxisAlignment.spaceAround,
              children: [
                Icon(Icons.favorite, color: Colors.red, size: 40),
                Icon(Icons.star, color: Colors.amber, size: 40),
                Icon(Icons.thumb_up, color: Colors.blue, size: 40),
              ],
            ),
            const SizedBox(height: 20),

            // ---------- COLUMN ----------
            Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: const [
                Text('Elemento 1 de la columna'),
                Text('Elemento 2 de la columna'),
                Text('Elemento 3 de la columna'),
              ],
            ),
            const SizedBox(height: 20),

            // ---------- STACK ----------
            Stack(
              alignment: Alignment.center,
              children: [
                Container(
                  width: 200,
                  height: 200,
                  color: Colors.orangeAccent,
                ),
                Container(
                  width: 150,
                  height: 150,
                  color: Colors.blueAccent,
                ),
                const Text(
                  'Stack Widget',
                  style: TextStyle(
                    fontSize: 20,
                    color: Colors.white,
                    fontWeight: FontWeight.bold,
                  ),
                ),
              ],
            ),
            const SizedBox(height: 20),

            // ---------- CONTAINER ----------
            Container(
              padding: const EdgeInsets.all(16),
              decoration: BoxDecoration(
                color: Colors.greenAccent,
                borderRadius: BorderRadius.circular(15),
              ),
              child: const Text(
                'Este es un Container con bordes redondeados y color de fondo.',
                textAlign: TextAlign.center,
                style: TextStyle(fontSize: 16),
              ),
            ),
          ],
        ),
      ),
    );
  }
}
